<h2>List of Animals</h2>

<form action="/animals/create" method="post">
    <label for="animal-name-input">
        Animal Name: 
        <input id="animal-name-input" type="text" placeholder="Theon Greyjoy" name="name">    
    </label>
    
    <label for="isMale-checkbox">
        Male: 
        <input id="isMale" type="checkbox" placeholder="Theon Greyjoy" name="name">    
    </label>

    <label for="isFemale-checkbox">
        Male: 
        <input id="isFemale" type="checkbox" placeholder="Theon Greyjoy" name="name">    
    </label>

    <button type="" >Create</button>
</form>

<br>
<br>
<br>

<h2>List of Animals</h2>
<div class="animals-container">
    {{#each}}
        <div class="animals_box">
            <h3>Name: {{this.name}}</h3>
            <h3>This animal is a: {{}} </h3>
            {{#if this.isMale}}

        </div>
    {{/each}}
</div>